{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/assets/*": [
                "./assets/*"
            ],
            "@/components/*": [
                "./components/*"
            ],
            "@/data/*": [
                "./data/*"
            ],
            "@/lib/*": [
                "./lib/*"
            ],
            "@/pages/*": [
                "./pages/*"
            ],
            "@/features/*": [
                "./features/*"
            ],
            "@/utils/*": [
                "./utils/*"
            ],
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "global.d.ts",
        "fonts.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}